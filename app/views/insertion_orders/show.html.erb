<section class="d-flex flex-column h-100">
  <%= render "shared/page_heading", title: "Insertion Order", class_name: "mb-4" %>

  <% if pdf_exists?(resource) %>
    <div class="d-flex flex-grow-1 mb-4">
      <iframe class="d-block border-0 h-100 w-100" src="<%= serve_pdf_insertion_order_path(resource) %>"></iframe>
    </div>
  <% else %>
    <div class="alert alert-warning mb-4" role="alert">
      Document not found. Please try again later.
    </div>
  <% end %>

  <div>
    <div class="row d-flex justify-content-end">
      <div class="col col-2">
        <%= link_to "Cancel", insertion_orders_path, class: "btn btn-light w-100" %>
      </div>
    </div>
  </div>
</section>
