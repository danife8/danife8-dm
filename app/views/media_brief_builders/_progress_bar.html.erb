<div class="row mb-4">
  <div class="col-12">
    <p class="text-end text-primary fw-bold">Step <%= step %> of <%= max_steps %></p>
  </div>
  <div class="col-5">
    <h3 class="text-primary fw-bold"><%= title %></h3>
  </div>
  <div class="col-7 d-flex align-items-center">
    <div class="progress w-100">
      <div class="progress-bar" role="progressbar" style="width: <%= (step * 100) / max_steps %>%"></div>
    </div>
  </div>
</div>
