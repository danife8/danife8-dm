<section>
  <%= render "shared/page_heading", title: "Select or Add Client User | Campaign - #{resource.insertion_order.title}", class_name: "mb-5" %>
  <% js_controller_name, js_controller_name_target = "add-client-user", "add_client_user_target" %>
  <%= form_with model: resource.documents_request, local: true do |form| %>
    <div class="container" data-controller="<%= js_controller_name %>">
      <%= render "select_or_add_client_user_fields", js_controller_name:, js_controller_name_target:, form: %>
      <%= form.hidden_field :insertion_order_id, value: resource.insertion_order.id %>

      <div class="mt-3 d-flex justify-content-end">
        <%= link_to 'Back', :back, class: "btn btn-primary mx-2" %>
        <%= form.submit "Add",
          class: "btn btn-primary",
          data: { "#{js_controller_name_target}": "addUserButton" },
          disabled: true
        %>
      </div>
    </div>
  <% end %>

</section>
